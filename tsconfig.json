{
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "extends": "@superdispatch/tsconfig",
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "target": "ES2019",
    "tsBuildInfoFile": "node_modules/.cache/tsconfig.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "utils/*": ["utils/*"]
    }
  }
}
